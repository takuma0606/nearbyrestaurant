<div class="search_box">
    <h1>Nearby<br>Restaurants<i class="fa-solid fa-utensils"></i></h1>
    <div class="search_field">
        <div class="slider_field">
            <div class="distance_range">
                <p>現在地から</p>
                <p><span id="distance"></span>m</p>
            </div>
            <div class="range">
                <input type="range" id="distance_range" min="1" max="5" step="1">
            </div>
            <div class="budget_range">
                <p>予算</p>
                <p><span id="budget"></span></p>
            </div>
            <div class="range">
                <input type="range" id="budget_range" min="1" max="9" step="1">
            </div>
        </div>
        <div class="select_field">
        <% @genres.each do |genre,code| %>
            <div><label><input type="checkbox" value=<%= code %>><%= genre %></label></div>
        <% end %>
        </div>
    </div>
    <button id="location" value="1" data-page="1"><i class="fa-solid fa-magnifying-glass"></i>  レストランを探す</button>
</div>
<div class="index">
    <div class="data_number"><p class="from"></p>～<p class="to"></p>件表示 / 全<p class="alldata"></p>件</div>
    <div class="main"></div>
    <div class="pagenation"></div>
    <template id="template">
        <div class="restaurant_data">
            <a href=""></a>
            <div class="photo"><img src=""></img></div>
            <h1 class="name"></h1>
            <p class="genre"></p>
            <p class="access"></p>
            <p class="budget"></p>
        </div>
    </template>
</div>